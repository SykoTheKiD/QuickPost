{
  "name": "QuickPost",
  "version": "1.0",
  "description": "Quickly make posts to your favourite social media network.",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "QuickPost",
    "default_icon": "icon.png",
    "default_popup": "app.html"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js\/listeners.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}